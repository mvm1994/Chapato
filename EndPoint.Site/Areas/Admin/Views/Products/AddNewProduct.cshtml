}

@section Styles
{

    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/customcss/product/ProductCreate.css" />
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/select2/select2.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/bootstrap-select/bootstrap-select.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/tagify/tagify.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/dropzone/dropzone.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">

    <style>

        .btn-purple
        {
            background-color: #BE6EF4;
            color: #fff;
            border-color: #BE6EF4;
            opacity:1;
        }

        .btn-purple:hover 
        {
             background-color: #BE6EF4;
            color: #fff;
            border-color: #BE6EF4;
            opacity:0.8;
        }

    </style>
    <style>

        .dz-filename {
            direction: ltr !important;
        }

        .parent_color {
            width: 100% !important;
            display: flex !important;
            flex-wrap: wrap !important;
            margin-top: 30px !important;
            margin-bottom: 0px !important;
            padding: 12px !important;
            justify-content: right !important;
        }

        .child_color {
            width: 50px !important;
            height: 50px !important;
            border: 1px solid cyan !important;
            margin-left: 5px !important;
            margin-bottom: 10px !important;
        }

        .active_color_list {
            padding: 20px 10px !important
        }

        .notactive_color_list {
            padding: 20px 0px !important
        }

        @@media screen and (max-width:809px) {
            .action_btn {
                width: 45px !important;
            }
        }

        #cke_notifications_area_Product_Long_Desc {
            display: none !important
        }

        .toggle_btn_padding_right {
            padding-right: 0px !important;
        }

        .btn-container {
            display: flex;
            justify-content: end;
        }

        .flex_class {
            display: flex;
        }

        .positive_point {
            background: rgba(57, 218, 138, 0.08) !important;
            color: #39da8a !important;
            border: 1px solid #39da8a !important;
            text-align: center !important;
        }

            .positive_point::placeholder {
                color: #39da8a !important;
                opacity: 0.5;
            }

        .negative_point {
            background: rgba(255, 91, 92, 0.08) !important;
            color: #ff5b5c !important;
            border: 1px solid #ff5b5c !important;
            text-align: center;
        }

            .negative_point::placeholder {
                color: #ff5b5c !important;
                opacity: 0.5;
            }

        .quality_point_removebtn {
            color: #ff5b5c !important;
            height: 42px !important;
        }

            .quality_point_removebtn:hover {
                color: white !important;
            }

        @@media screen and (min-width:992px) 
        {
            .delivery_end_chapter {
                width: 13% !important;
            }

            .user_option_table_parent {
                overflow-x: hidden !important;
                width: 100% !important;
            }

            .compact-column {
                padding-left: 5px !important;
                padding-right: 5px !important;
                width: 1% !important;
                white-space: nowrap;
            }

            .js_tbl_list {
                position: relative !important;
                overflow: visible !important;
            }

            .item_table_parent
            {
                padding-left: 15px
            }

            .record_btn_item_parent
            {
                padding-left:28px !important;
            }

            .modal_title_header_display
            {
                display:flex;
                justify-content:space-between;
            }
        }

        @@media screen and (min-width:810px) and (max-width:810px) {
            .delivery_end_chapter {
                width: 18% !important;
            }

            .user_option_table_parent {
                overflow: auto !important;
                width: 99% !important;
                margin-right: 3px !important;
            }

            .compact-column {
                padding-left: 5px !important;
                padding-right: 5px !important;
                width: 1% !important;
                white-space: nowrap;
            }

            .modal_title_header_display {
                display: flex;
                justify-content: space-between;
            }
        }

        @@media screen and (max-width:809px) {

            .delivery_end_chapter {
                width: 71% !important;
            }

            .user_option_table_parent {
                overflow: auto !important;
                width: 98% !important;
                margin-right: 3px !important;
            }

            .compact-column {
                padding-left: 5px !important;
                padding-right: 5px !important;
                width: 1% !important;
                white-space: nowrap;
            }

            .modal_title_header_display {
                display: block;
            }
        }

        .tooltip-custom,.title-custom
        {
            position: relative;
            display: inline-block;
        }

        .tooltip-custom .tooltip-text, .title-custom .title-text 
        {
            font-family: IRANSans;
            font-size: 12px !important;
            visibility: hidden;
            width: 150px;
            background-color: #000;
            color: #fff;
            text-align: center;
            border-radius: 5px;
            padding: 5px;
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            margin-bottom: 5px;
            opacity: 0;
            transition: opacity 0.3s;
            z-index: 1;
            word-wrap: break-word;
            white-space: normal;
        }

        .tooltip-custom .tooltip-text::after, .title-custom .title-text::after 
        {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: #000 transparent transparent transparent;
        }

        .tooltip-custom:hover .tooltip-text, .title-custom:hover .title-text
        {
            visibility: visible;
            opacity: 1;
        }

        .no-dropdown-arrow::after {
            display: none !important;
        }

        .disabled_button {
            opacity: 0.5 !important;
        }

    </style>
    <style>

        .pagination-controls {
            text-align: center;
            margin-top: 30px;
        }

        .pagination-controls button 
        {
            background-color: #A9B0B0;
            border: 1px solid #797979;
            color: white;
            padding: 6px 12px;
            margin: 0 5px;
            font-size: 14px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.2s;
            width: 35px;
            text-align: center;
        }

        .pagination-controls button:hover {
            background-color: #8a9a9a;
            transform: scale(1.05);
        }

        .pagination-controls button:disabled {
            background-color: #4385db;
            cursor: not-allowed;
        }

        .pagination-controls button:focus {
            outline: none;
            box-shadow: 0 0 5px #4385db;
        }

        @@media (max-width: 768px) {
            .pagination-controls button {
                padding: 5px 10px;
                font-size: 12px;
                min-width: 28px;
            }
        }

    </style>
}

