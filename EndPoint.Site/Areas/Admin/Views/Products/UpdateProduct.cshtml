                                                        </div>
                                                        <div class="col-3" style="text-align:center">
                                                            <button class="btn btn-primary" style="height: 41px;width:100%" onclick="Add_PositivePoint(document.getElementById('Positive_Points_Text').value)">
                                                                <i class="bx bx-plus"></i>
                                                            </button>
                                                        </div>
                                                    </div>
