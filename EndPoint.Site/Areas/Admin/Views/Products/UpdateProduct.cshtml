﻿
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Chapato.Application.Services.Products.Queries.GetProductById;
@model ResultGetProductByIdDto
@{
    ViewData["Title"] = "ویرایش محصول";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {

    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/customcss/product/productcreate.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/select2/select2.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/bootstrap-select/bootstrap-select.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/tagify/tagify.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/dropzone/dropzone.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">

    <style>

        .dz-filename {
            direction: ltr !important;
        }

        .parent_color {
            width: 100% !important;
            display: flex !important;
            flex-wrap: wrap !important;
            margin-top: 30px !important;
            margin-bottom: 0px !important;
            padding: 12px !important;
            justify-content: right !important;
        }

        .child_color {
            width: 50px !important;
            height: 50px !important;
            border: 1px solid cyan !important;
            margin-left: 5px !important;
            margin-bottom: 10px !important;
        }

        .active_color_list {
            padding: 20px 10px !important
        }

        .notactive_color_list {
            padding: 20px 0px !important
        }

        @@media screen and (max-width:809px) {
            .action_btn {
                width: 45px !important;
            }
        }

        #cke_notifications_area_Product_Long_Desc {
            display: none !important
        }

        .toggle_btn_padding_right {
            padding-right: 0px !important;
        }

        .btn-container {
            display: flex;
            justify-content: end;
        }

        .flex_class {
            display: flex;
        }

        .positive_point {
            background: rgba(57, 218, 138, 0.08) !important;
            color: #39da8a !important;
            border: 1px solid #39da8a !important;
            text-align: center !important;
        }

            .positive_point::placeholder {
                color: #39da8a !important;
                opacity: 0.5;
            }

        .negative_point {
            background: rgba(255, 91, 92, 0.08) !important;
            color: #ff5b5c !important;
            border: 1px solid #ff5b5c !important;
            text-align: center;
        }

            .negative_point::placeholder {
                color: #ff5b5c !important;
                opacity: 0.5;
            }

        .quality_point_removebtn {
            color: #ff5b5c !important;
            height: 42px !important;
        }

            .quality_point_removebtn:hover {
                color: white !important;
            }

        @@media screen and (min-width:992px) {
            .delivery_end_chapter {
                width: 13% !important;
            }
        }

        @@media screen and (min-width:810px) and (max-width:810px) {
            .delivery_end_chapter {
                width: 18% !important;
            }
        }

        @@media screen and (max-width:809px) {

            .delivery_end_chapter {
                width: 71% !important;
            }
        }

        .tooltip-custom {
            position: relative;
            display: inline-block;
        }

            .tooltip-custom .tooltip-text {
                font-family: IRANSans;
                font-size: 12px !important;
                visibility: hidden;
                width: 140px;
                background-color: #000;
                color: #fff;
                text-align: center;
                border-radius: 5px;
                padding: 5px;
                position: absolute;
                bottom: 100%;
                left: 50%;
                transform: translateX(-50%);
                margin-bottom: 5px;
                opacity: 0;
                transition: opacity 0.3s;
                z-index: 1;
            }

                .tooltip-custom .tooltip-text::after {
                    content: '';
                    position: absolute;
                    top: 100%;
                    left: 50%;
                    margin-left: -5px;
                    border-width: 5px;
                    border-style: solid;
                    border-color: #000 transparent transparent transparent;
                }

            .tooltip-custom:hover .tooltip-text {
                visibility: visible;
                opacity: 1;
            }

    </style>
}

