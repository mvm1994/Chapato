﻿
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ثبت فایل جدید";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {

    <link href="~/CustomCss/Users/UserCreate.css" rel="stylesheet" />
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/typeahead-js/typeahead.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/select2/select2.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/tagify/tagify.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/bootstrap-select/bootstrap-select.css">
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/typeahead-js/typeahead.css">

    <style>
        @@media screen and (min-width:992px) {
            .progress.col-lg-6 {
                width: 48.5% !important;
            }
        }

        @@media screen and (min-width:810px) and (max-width:810px)
        {
            .progress.col-md-8 {
                width: 65.35% !important;
            }
        }
    </style>
}

<div class="col-xxl container">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">ثبت فایل جدید</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-12 mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">انتخاب فایل</label>
                        <div class="input-group">
                            <input type="file" class="form-control" id="fileInput" aria-describedby="inputGroupFileAddon03" aria-label="Upload">
                        </div>
                    </div>
                </div>
                <div class="progress col-lg-6 col-md-8 col-sm-12">
                    <div id="progressBar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="row justify-content-end">
                    <div class="d-flex">
                        <a id="AddFile" onclick="AddFile()" class="btn btn-primary mt-4 btn_txtcolor" style="margin-left: 5px;">ثبت</a>
                        <a href="~/admin/Uploads/Index" class="btn btn-secondary me-3 mt-4" style="color:white !important;">
                            <span class="align-middle">بازگشت</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/CustomJs/Uploads/UploadCreate.js"></script>
    <script src="~/AdminTemplate/assets/js/forms-selects.js"></script>
    <script src="~/AdminTemplate/assets/js/forms-tagify.js"></script>
    <script src="~/AdminTemplate/assets/js/forms-typeahead.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/select2/select2.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/select2/i18n/fa.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/tagify/tagify.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/bootstrap-select/bootstrap-select.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/bootstrap-select/i18n/defaults-fa_IR.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/typeahead-js/typeahead.js"></script>
    <script src="~/AdminTemplate/assets/vendor/libs/bloodhound/bloodhound.js"></script>
}